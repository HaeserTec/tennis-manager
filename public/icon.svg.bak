<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
  <defs>
    <linearGradient id="grad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#18181b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#09090b;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="512" height="512" rx="128" fill="url(#grad)" />
  
  <!-- Court Lines -->
  <g transform="translate(106, 106)" stroke="#e4e4e7" stroke-width="16" fill="none">
    <!-- Outer Boundary (300x300 for simplified aspect) -->
    <rect width="300" height="300" rx="4" />
    
    <!-- Singles Lines -->
    <line x1="40" y1="0" x2="40" y2="300" />
    <line x1="260" y1="0" x2="260" y2="300" />
    
    <!-- Service Box Lines -->
    <line x1="40" y1="75" x2="260" y2="75" />
    <line x1="40" y1="225" x2="260" y2="225" />
    <line x1="150" y1="75" x2="150" y2="225" />
    
    <!-- Net -->
    <line x1="10" y1="150" x2="290" y2="150" stroke-width="24" stroke="#ffffff" stroke-opacity="0.3" stroke-linecap="round"/>
  </g>

  <!-- Tactical Arrow (Magenta) -->
  <g transform="translate(106, 106)">
    <!-- Path from bottom baseline to top corner -->
    <path d="M 150 260 Q 150 180 80 120" stroke="#d946ef" stroke-width="24" fill="none" stroke-linecap="round" />
    <!-- Arrowhead -->
    <path d="M 80 120 L 100 135 M 80 120 L 95 105" stroke="#d946ef" stroke-width="24" fill="none" stroke-linecap="round" stroke-linejoin="round" />
  </g>
  
  <!-- Ball (Yellow) -->
  <circle cx="256" cy="400" r="20" fill="#ffd600" />

</svg>